  <script src="/assets/cart.js"></script>
  <link href="/assets/cartStyle.css" rel="stylesheet" type="text/css">
</head>

<body class=>
  <!-- "open" -->
  <%-include ('partials/header.ejs')%>
  <section class="shop">
        <!--******************** the main contents **********************-->
        <div class="shop__products">
          <div class="products">

            <!--********************** product times   *********************-->
    <% for (let i=0; i < products.length; i++){%>
            <div class="products__item">
              <article class="product">
                <h1 class="product__title"> <%= products[i].name %> </h1>
                <h5 class="product_price">price: <%= products[i].price %> </h3>
                <p class="quantity">Available: <%= products[i].quantity %></p>
                <p class="product__text" id=<%= products[i].id %>>
                  <button type="button" id="add" class="btn btn-primary" data-toggle="modal" data-target="#addModal<%= products[i].id %>">add to cart</button>
                </p>
              </article>
            </div>
            

            <!-- Modal for adding product -->
        <div class="modal fade" id="addModal<%= products[i].id %>" tabindex="-1" role="dialog" aria-hidden="true">s
          <div class="modal-dialog" role="document">
            <form method="POST" action="/cart" >
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Purchase Item</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                      <input type="hidden" name="id" value=<%= products[i].id %>>
                      <input type="hidden" name="price" value=<%= products[i].price %>>
                      <h3 class="prodName"><%= products[i].name %></h1>
                      <label for="quantity">quantity: </label>
                      <input class="qty" type="number" name="quantity" min="1" max="<%= products[i].quantity %>"/>
                      <p></p>
                      <!-- <div> -->
                        <label for="totalPrice" class="font-weight-bold">Total price</label>
                        <p class="totalP"><%= products[i].price %></p>
                      <!-- </div> -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" >Purchase</button>
                    </div>
                </div>
              </form>
          </div>
      </div>
    <%}%>

                </div>
              </div>
            </section>

        
      </body>
</html>